{
  "manifest_version": 3,
  "name": "Sensitive Data Detector",
  "version": "1.0.0",
  "description": "Detects sensitive data across tabs using a single shared LLM instance",
  "icons": {

  },
  "permissions": ["storage", "tabs", "scripting", "activeTab", "webNavigation"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://chat.openai.com/*",
        "*://www.perplexity.ai/*",
        "*://claude.ai/*"
      ],
      "js": ["content.js"]
    }
  ]
}
